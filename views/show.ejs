<%- include('./partials/header')%>

    <link rel="stylesheet" href="/stylesheets/mobile.css">

 <div class="page1">
    <h1 style="font-style: 40px;width: 100%;height: 10%;display: flex;justify-content: center;align-items: center; margin-bottom: 20px;" >Top BRANDS mobile ðŸ‘‡</h1>
  
    <div class="cardss" style="display: flex;flex-wrap: wrap;">

<% users.forEach(function(user){ %>
    <form action="/cart" method="post" class="card" style="width: 20rem; margin: 5px;">
        <img src="<%=user.photo%>" class="card-img-top">
        <div class="card-body" style="background-color: black; color: white;">
            <h4 style="font-size: 20px; font-family: Georgia, 'Times New Roman', Times, serif;" >Company name:-<%=user.company%></h4>
            <h4 style="font-size: 20px; font-family: Georgia, 'Times New Roman', Times, serif;">Price:-<%=user.price%></h4>
            <input type="hidden" name="company" value="<%=user.company %>">
            <input type="hidden" name="price" value="<%=user.price %>">
            <input type="hidden" name="id" value="<%=user._id%>">
            <input type="hidden" name="photo" value="<%=user.photo%>">
            <button class="btn btn-success">
                Add to cart
            </button>
        </div>
    </form>

    <%})%>

    </div>

 </div>


